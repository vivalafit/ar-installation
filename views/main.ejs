   <script src="libs/aframe-ar.js"></script> 
</head>
<body>
  <a-scene embedded arjs='sourceType: webcam;'>
    <a-marker type='pattern' url='data/n.patt'>
      <!-- <video id="gepard-running" autoplay loop="true" muted src="gifs/tiger-nigger.mp4"></video> -->
      <!-- <a-video src="gifs/tiger-nigger.mp4" playsinline webkit-playsinline width="3" height="1.5" repeat="true"></a-video> -->
      <a-video src="gifs/tiger-nigger.mp4" width="3" height="1.5"  autoplay loop="true" muted playsinline webkit-playsinline></a-video>
      <!-- <a-box position='0 0.5 0' material='color: blue;'></a-box> -->
    </a-marker>

      <!-- handle marker with your own pattern -->
      <a-marker type='pattern' url='data/pattern-python.patt'>
        <a-image src="images/hero.jpeg" width="3" height="1.5"></a-image>
      </a-marker>
  
      <!-- handle marker with hiro preset -->
      <a-marker preset='hiro'>
        <a-box position='0 0.5 0' material='color: green;'></a-box>
      </a-marker>
  
      <!-- add a simple camera -->
      <a-entity camera></a-entity>
    </a-scene>
    <div class="main tutorial">
      <%- include ('./partials/menu') %>
      <div class="main-content">
        <div class="tutorial-2 hidden">
            <img class="tutorial-arrow" src="/icons/tutorial-arrow-2.svg" alt="">
            <div class="main-tutorial-text">Інформація про художників</div>
            <div class="lower-tutorial-text"><b>ОК</b></div>
        </div>
        <!-- tutorial stuff -->
        <div class="tutorial-1">
            <div class="upper-tutorial-text">Щоб побачити <b>ПОЛЕ</b> наведіться на зображення</div>
            <div class="lower-tutorial-text"><b>ОК</b></div>
        </div>
          <!-- tutorial stuff -->
      </div>
  </div>
   <!-- libs -->
   <script src="libs/jquery-3.5.1.min.js"></script>
   <script src="pages/main/main.js" defer></script>
</body>
</html>
